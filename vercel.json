{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "HoldemArea/package.json", "use": "@vercel/static-build", "config": { "distDir": "." } },
    { "src": "Texas-Holdem-Odds-Calculator/package.json", "use": "@vercel/static-build", "config": { "distDir": "." } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/odds(.*)", "dest": "/Texas-Holdem-Odds-Calculator/index.html" },
    { "src": "/(.*)", "dest": "/HoldemArea/index.html" }
  ]
}
